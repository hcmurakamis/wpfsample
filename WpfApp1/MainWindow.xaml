<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid Background="#16FFC6C6">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>


        <ListBox Grid.Column="0" Grid.Row="0" 
                x:Name="GarbageBucket" Margin="10"
               >

        </ListBox>
        <Button Grid.Column="1" Grid.Row="0" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" Height="40">
            <StackPanel Orientation="Horizontal" Margin="4,2">
                <Image Source="./Resources/user.png" Width="30" Height="30" />
                <Label Content="ユーザー" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Button>

        <Border Grid.Column="0" Grid.Row="1" >
            
        </Border>
        <Image Source="./Resources/user.png" Width="30" Height="30" 
               AllowDrop="True" MouseLeftButtonDown="img2_MouseLeftButtonDown" 
               Grid.Column="1" Grid.Row="1" 
                Drop="FileListBox_Drop"
                DragOver="FileListBox_DragOver"/>


        <Image x:Name="SourceImage" Width="200" Height="200" Margin="10" 
               Source="./Resources/user.png" Grid.Column="0" Grid.Row="2"
               MouseMove="SourceImage_MouseMove"/>
        <Image x:Name="TargetImage" Width="200" Height="200" Margin="10,0,0,0" 
               HorizontalAlignment="Right" AllowDrop="True" Source="./Resources/user.png"
               Drop="TargetImage_Drop"  Grid.Column="1" Grid.Row="2"
               DragOver="TargetImage_DragOver"/>
    </Grid>
</Window>
